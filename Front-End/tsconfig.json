{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react", // Enable JSX support
    "moduleResolution": "node", // Ensures proper resolution of modules
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowSyntheticDefaultImports": true, // Allow default imports
    "esModuleInterop": true // Ensure compatibility with CommonJS modules
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/components/api.js" // Ensure specific files are included
  ],
  "exclude": [
    "node_modules", // Exclude unnecessary directories
    "babel.config.js",
    "metro.config.js"
  ]
}
